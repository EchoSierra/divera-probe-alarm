{
  "name": "divera-probe-alarm",
  "version": "1.0.0",
  "description": "A Node.js TypeScript project with ESLint and Jest",
  "main": "dist/src/index.js",
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "build": "tsc",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "start": "node dist/src/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src tests --ext .ts",
    "lint:fix": "eslint src tests --ext .ts --fix",
    "format": "prettier --write \"src/**/*.{ts,js,json}\" \"tests/**/*.{ts,js,json}\" \"*.{json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,json}\" \"tests/**/*.{ts,js,json}\" \"*.{json,md}\"",
    "prepare": "husky install"
  },
  "keywords": [
    "nodejs",
    "typescript",
    "eslint",
    "jest"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/axios": "^0.9.36",
    "@types/jest": "^29.5.5",
    "@types/moment-timezone": "^0.5.13",
    "@types/node": "^20.6.3",
    "@types/node-cron": "^3.0.11",
    "@typescript-eslint/eslint-plugin": "^6.7.2",
    "@typescript-eslint/parser": "^6.7.2",
    "eslint": "^8.49.0",
    "eslint-config-prettier": "^9.1.2",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "prettier": "^3.0.3",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "axios": "^1.12.2",
    "dotenv": "^17.2.3",
    "moment-timezone": "^0.6.0",
    "node-cron": "^4.2.1"
  }
}
