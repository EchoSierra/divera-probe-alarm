# Divera247 API Configuration
DIVERA_WEB_API_KEY=your_divera_api_key_here

# API Base URL (optional, defaults to https://api.divera247.com/api/v1)
DIVERA_API_BASE_URL=https://api.divera247.com/api/v1

# Alarm Configuration
ALARM_TITLE=Test Alarm vom Divera Probe Service
ALARM_TEXT=Dies ist ein Testalarm, der vom Divera Probe Alarm Service generiert wurde.
ALARM_PRIORITY=1
ALARM_ADDRESS=Testadresse, Teststadt

# Cron Configuration
# Format: "minute hour day_of_month month day_of_week"
# Default: Every Saturday at 11:40 AM German time
CRON_PATTERN=40 11 * * 6
CRON_TIMEZONE=Europe/Berlin
CRON_ENABLED=false